FROM apache/airflow:latest-python3.11

USER root

RUN apt-get update \
  && apt-get install -y --no-install-recommends openjdk-17-jre-headless \
  && apt-get autoremove -yqq --purge \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/*

USER airflow

ENV JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64

COPY requirements.txt /

# Install Airflow with additional libraries including kagglehub
RUN pip install --no-cache-dir "apache-airflow[statsd]==${AIRFLOW_VERSION}" -r /requirements.txt \
  && pip install kagglehub  # Add this line to install kagglehub